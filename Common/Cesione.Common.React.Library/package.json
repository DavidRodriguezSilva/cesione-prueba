{
  "name": "cesione.common.react.library",
  "private": true,
  "version": "2.0.0",
  "description": "Librería común de componentes, utilidades y servicios para aplicaciones React de Cesione, prueba aislada",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "styles"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./styles": {
      "import": "./dist/styles/index.css"
    },
    "./styles/*": {
      "import": "./dist/styles/*"
    }
  },
  "scripts": {
    "build": "tsc && npx cpy \"src/styles/**/*.css\" dist/styles/"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-slot": "^1.2.3",
    "react-router": "^7.8.1",
    "zustand": "^5.0.7"
  },
  "peerDependencies": {
    "@tailwindcss/vite": "^4.1.12",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.536.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.12",
    "tw-animate-css": "^1.3.7"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "cpy-cli": "^5.0.0",
    "typescript": "~5.6.2"
  }
}
